<table id="pointer-board">
  <tr>
    <% 7.times do |i| %>
      <td id="pointer-<%=i%>" class="pointer-transparent"></td>
    <% end %>
  </tr>
</table>
<table id="board">
  <% 6.times do |y| %>
    <tr>
      <% 7.times do |x| %>
        <td id="x-<%=x%>-y-<%=y%>" class="empty"></td>
      <% end %>
    </tr>
  <% end %>
</table>

<button id="submit"></button>